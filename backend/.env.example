# Example environment variables
# Copy this file to .env and fill in your values

# =============================================================================
# ARCHITECTURE MODE
# =============================================================================
# Set to 'true' for production (Render) - API will only read from database
# Set to 'false' for local development - API will run ML computations
API_ONLY_MODE=false

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL connection string (REQUIRED for production)
# Format: postgresql://user:password@host:port/database
# Example: postgresql://user:pass@localhost:5432/bjj_betsports
DATABASE_URL=

# For local development, SQLite will be used if DATABASE_URL is not set
# SQLite path: sqlite:///./app_persistence.db

# =============================================================================
# API KEYS
# =============================================================================
# Optional: API-Football key (free tier: 100 requests/day)
# Get your key at: https://api-football.com
API_FOOTBALL_KEY=

# Optional: Football-Data.org key (free tier: 10 requests/min)
# Get your key at: https://football-data.org/client/register
FOOTBALL_DATA_ORG_KEY=

# Optional: The Odds API key
# Get your key at: https://the-odds-api.com
THE_ODDS_API_KEY=

# Optional: RapidAPI key
RAPIDAPI_KEY=

# Optional: TheSportsDB key (free tier: uses '3')
THESPORTSDB_KEY=3

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
# Frontend URL for CORS (comma-separated for multiple)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Server port
PORT=8000

# Debug mode (set to 'true' for development)
DEBUG=false

# =============================================================================
# WORKER CONFIGURATION (for GitHub Actions / local worker script)
# =============================================================================
# Set to 'true' to disable ML training (useful for testing)
DISABLE_ML_TRAINING=false

# Memory mode (set to 'true' for low-memory environments)
LOW_MEMORY_MODE=false

# Clear cache on startup (useful for development)
CLEAR_CACHE_ON_START=false

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

